@model CompanyViewModel
<div class="panel panel-head">
    <h2>Company</h2>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            @Html.ValidatedEditorWithLabelFor(x => Model.CompanyTitle)
        </div>
        <div class="col-xs-6">
            @Html.ValidatedEditorWithLabelFor(x => Model.CompanyPosition)
        </div>
        <div class="col-xs-12">
            @Html.EditorFor(x => x.CompanyAddress)
        </div>
    </div>
</div>