@model PrimaryContactViewModel
<div class="panel panel-head">
    <h2>Primary Contact</h2>
</div>
<div class="row">
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.FirstName, true)
    </div>
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.LastName, true)
    </div>
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.Email, true)
    </div>
</div>
@Html.EditorFor(x => x.Address)
<div class="row">
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.OfficePhone, true)
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.CellPhone, true)
    </div>
</div>