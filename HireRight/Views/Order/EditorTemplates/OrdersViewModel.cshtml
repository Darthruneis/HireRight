@model CreateOrderViewModel
<div class="row">
    <div class="col-xs-12 col-lg-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.Order.PositionsToFill, true)
    </div>
    <div class="col-xs-12 col-lg-3">
        @Html.LabelFor(x => x.Order.Products) <br />
        @Html.DropDownListFor(x => x.Order.SelectedProductId,
                                           Model.Order.Products.Select(x => new SelectListItem { Text = x.Title, Value = x.RowGuid.ToString() }).ToList(),
                                           new { id = "listOfProducts" }) <br />
        @Html.ValidationMessageFor(x => x.Order.SelectedProductId)
    </div>
    <div class="col-xs-12 col-sm-6 col-lg-3" id="productDiscounts"></div>
    <div class="col-xs-12 col-sm-6 col-lg-2">
        <div class="row">
            <div class="col-xs-12">
                @Html.ValidatedEditorWithLabelFor(x => Model.Order.Quantity, true)
                <div id="orderTotal" style="width: 100%;">
                    Total: $0.00
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.LabelFor(x => x.Order.Notes, "Notes (optional)")
        @Html.TextAreaFor(x => Model.Order.Notes, new {style = "resize: none;", rows = "5", cols = "150", @class = "fixed-horizontal", placeholder = "Anything else you'd like us to know?"})
    </div>
</div>
<script src="~/Scripts/Order/_Order.js"></script>
<script>
    $(document).ready(Orders.bindEvents);
</script>