@model ContactUsViewModel

@{ Html.RenderPartial("_ContactInformation");}
<div class="row">
    <div class="col-xs-12">
        <h2>How can we help you?</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.CompanyName, true)
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.PositionAtCompany, true)
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.FirstName, true)
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => Model.LastName, true)
    </div>
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.Email, true)
    </div>
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.OfficePhone, true)
    </div>
    <div class="col-xs-12 col-md-4">
        @Html.ValidatedEditorWithLabelFor(x => Model.CellPhone, true)
    </div>
</div>
<div>
    @Html.EditorFor(x => x.Address)
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.LabelFor(x => x.Message)<span class="asterisk-required">*</span>
        @Html.TextAreaFor(x => Model.Message, new { style = "resize: vertical; min-height: 90px; overflow-y: scroll; overflow-x: hidden;", placeholder = "I would like help with...", required = true, rows = 6, cols = 200 })
        @Html.ValidationMessageFor(x => Model.Message)
    </div>
</div>
<div class="row" style="margin-top: 10px;">
    <div class="col-xs-12">
        <div class="pull-left">
            @Html.ValidationSummary(true)
        </div>
        <div class="pull-right">
            @Html.SubmitButton("Send")
        </div>
    </div>
</div>