@model AddressDTO
<div class="row">
    <div class="col-xs-12 col-lg-10">
        @Html.ValidatedEditorWithLabelFor(x => Model.StreetAddress, true)
    </div>
    <div class="col-xs-12 col-lg-2">
        @Html.ValidatedEditorWithLabelFor(x => Model.UnitNumber)
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-lg-3">
        @Html.ValidatedEditorWithLabelFor(x => Model.Country, true)
    </div>
    <div class="col-xs-12 col-lg-3">
        @Html.ValidatedEditorWithLabelFor(x => Model.City, true)
    </div>
    <div class="col-xs-12 col-lg-3">
        @Html.ValidatedEditorWithLabelFor(x => Model.State, true)
    </div>
    <div class="col-xs-12 col-lg-3">
        @Html.ValidatedEditorWithLabelFor(x => Model.PostalCode, true)
    </div>
</div>