@using HireRight.EntityFramework.CodeFirst.Models.CompanyAggregate
@model JobAnalysisCategoryViewModel

<div class="categoryCard" data-categorytitle="@Model.Title" data-visibilityrank="@(Model.Industries.Contains(Industry.General) ? 1 : 0)"
     @foreach (var industry in Model.Industries)
     {
         @:data-industry-@(industry)="1"
     }>
    <div class="row">
        <div class="col-xs-12">
            <div class="cardDetails">
                <label>@Model.Title</label><br />
                @Model.Description
            </div>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-6" style="padding-right: 0;">
                    <div class="pull-left importanceToggleButton lessImportantButton" style="display: @(Model.Importance == CategoryImportance.Irrelevant ? "none" : "")">
                        <i class="glyphicon glyphicon-arrow-left"></i>
                    </div>
                </div>
                <div class="col-xs-6" style="padding-left: 0;">
                    <div class="pull-right importanceToggleButton moreImportantButton" style="display: @(Model.Importance == CategoryImportance.HighImportance ? "none" : "")">
                        <i class="glyphicon glyphicon-arrow-right"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
