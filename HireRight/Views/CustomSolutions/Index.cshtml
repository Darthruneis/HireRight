@model CustomSolutionsViewModel

@{
    ViewBag.Title = "Custom Solutions";
}

<script src="~/Scripts/showHideDiv.js"></script>
<script src="~/Scripts/customSolutions.js"></script>

<div class="row">
    <div class="col-xs-12">
        <h2>Job Analysis</h2>
    </div>
</div>
@using (Html.BeginForm("Index", "CustomSolutions", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="row borderedRow">
        <div class="col-xs-12">Explanation of form and what it is supposed to accomplish.</div>
    </div>
    <div id="contactAndCompanyInfo" class="row borderedRow">
        <div class="row">
            <div class="col-xs-11">
                <label>Required Information</label>
            </div>
            <div class="col-xs-1">
                <button id="showContactAndCompanyInfo" type="button" class="btn btn-default glyphicon glyphicon-minus-sign"></button>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                @Html.ValidatedEditorWithLabelFor(x => x.CompanyName)
            </div>
            <div class="col-xs-12 col-lg-6">
                @Html.ValidatedEditorWithLabelFor(x => x.PositionsToFill)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-lg-3">
                @Html.ValidatedEditorWithLabelFor(x => x.Contact.FirstName)
            </div>
            <div class="col-xs-6 col-lg-3">
                @Html.ValidatedEditorWithLabelFor(x => x.Contact.LastName)
            </div>
            <div class="col-xs-6 col-lg-3">
                @Html.ValidatedEditorWithLabelFor(x => x.Contact.OfficeNumber)
            </div>
            <div class="col-xs-6 col-lg-3">
                @Html.ValidatedEditorWithLabelFor(x => x.Contact.CellNumber)
            </div>
            <div class="col-xs-6 col-lg-3">
                @Html.ValidatedEditorWithLabelFor(x => x.Contact.Email)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.LabelFor(x => x.Notes)
                <br />
                @Html.TextAreaFor(x => x.Notes, new { style = "resize: none;", rows = "5", cols = "150", @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row borderedRow" id="collapsedCompanyAndContactInfo" hidden="hidden">
        <div class="col-xs-11">Press the <span class="glyphicon glyphicon-plus-sign"></span> button to show <b>Required Information</b> again.</div>
        <div class="col-xs-1">
            <button id="hideContactAndCompanyInfo" type="button" class="btn btn-default glyphicon glyphicon-plus-sign"></button>
        </div>
    </div>
    Html.RenderPartial("CustomSolutionsPartial", model: Model);
    <br/>
    <div class="row">
        <div class="col-xs-12">
            <div style="margin: 0 auto; width: 200px;">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </div>
    </div>
}