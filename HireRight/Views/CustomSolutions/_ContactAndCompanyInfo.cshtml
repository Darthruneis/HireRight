@model CustomSolutionsFirstStepModel
<div class="row">
    <div class="col-xs-12">
        <h3 role="heading">Required Information</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-lg-6">
        @Html.ValidatedEditorWithLabelFor(x => x.CompanyName, true)
    </div>
    <div class="col-xs-12 col-lg-6">
        @Html.ValidatedEditorWithLabelFor(x => x.PositionsToFill, true)
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => x.FirstName, true)
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.ValidatedEditorWithLabelFor(x => x.LastName, true)
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        @Html.ValidatedEditorWithLabelFor(x => x.OfficeNumber)
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        @Html.ValidatedEditorWithLabelFor(x => x.CellNumber)
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        @Html.ValidatedEditorWithLabelFor(x => x.Email)
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.LabelFor(x => x.Notes)
        <br />
        @Html.TextAreaFor(x => x.Notes, new { style = "resize: none;", rows = "5", cols = "150" })
    </div>
</div>