@{
    ViewBag.Title = "Home Page";
}
<div class="">
    <div class="row">
        <div class="col-xs-12 col-md-5 col-lg-4">
            <h1 class="text-shadow-gray">Hire Right Testing</h1>
            <h3 class="text-shadow-gray pad-left-30">
                <i>
                    Identify, Develop, Retain Talent
                    <br />
                    Hire Right, the First Time
                </i>
            </h3>
        </div>
        <div class="col-xs-12 col-md-7 col-lg-8">
            <br />
            <h4>Hire Right Consultants can help you get it right the first time. Our testing includes discussion with our experienced consultants to identify the best assessments for you.</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-4">
        <div class="btn btn-default horizontal-List-Button"
             id="showWhyUseHireRightListButton">
            Why Use Hire Right?
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="btn btn-default horizontal-List-Button"
             id="showConsultantsListButton">
            Consultants
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="btn btn-default horizontal-List-Button"
             id="showOccupationalCategoriesListButton">
            Occupational Categories
        </div>
    </div>
</div>
<br />
<div id="infoDiv">
</div>
<script src="~/Scripts/Navigation/_Navigation.js"></script>
<script>
    $(document).ready(function ()
    {
        var $infoDiv = $("#infoDiv");
        var controllerName = "/Home/";
        Navigation.replaceDivContents($infoDiv, controllerName + "Introduction");
        $("#showWhyUseHireRightListButton").click(function ()
        {
            Navigation.replaceDivContents($infoDiv, controllerName + "WhyUseHireRight");
        });
        $("#showConsultantsListButton").click(function ()
        {
            Navigation.replaceDivContents($infoDiv, controllerName + "Consultants");
        });
        $("#showOccupationalCategoriesListButton").click(function ()
        {
            Navigation.replaceDivContents($infoDiv, controllerName + "OccupationalCategories");
        });
    });
</script>